<div class="products">
  <p id="notice"><%= notice %></p>

  <h1>Products</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Image url</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td class="title"><%= product.title %></td>
          <td class="description"><%= product.description %></td>
          <td class="image"><%= product.image_url %></td>
          <td class="price"><%= product.price %></td>
          <td class="show"><%= link_to 'Show', product %></td>
          <td class="edit"><%= link_to 'Edit', edit_product_path(product) %></td>
          <td class="destroy"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Product', new_product_path %>
</div>
